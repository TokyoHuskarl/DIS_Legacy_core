// shitty pseudo randomising of map elevaion
__fn cmd_map_randomise_height_legacy $tileXmin $tileYmin $tileXmax $tileYmax $amount {
	@loop $amount {
	    var1 = $tileXmin
	    var2 = $tileYmin
	    var3 = $tileXmax
	    var4 = $tileYmax
	    var1 = rnd(var1, var3)
	    var2 = rnd(var2, var4)
	    var3 = var1 + rnd(12, 18)
	    var4 = var2 + rnd(10, 16)
	    @call .cev 1802
	}
}




