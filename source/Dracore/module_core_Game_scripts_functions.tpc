deft DISmapCmdLink = 771


__fn DIS_Cmd_map $LINKstr $md $counter $given_v_or_str $flags {
	SScmdPackage_Build("Cmd.Map",$LINKstr, $md, $counter, $given_v_or_str, $flags, {
		DIS_map_methods($LINKstr $md $counter $given_v_or_str $flags)
	})
}


