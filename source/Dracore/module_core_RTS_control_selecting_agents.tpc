
// hidoi
__fn CEV_CONTROL_SELECT_AGENTS_GROUP {
	v[3] = MousePtr_x
	v[4] = MousePtr_y
	@if v[1] >= v[3] {
			v[1].swap v[3], 1
			
	}
	@if v[2] >= v[4] {
			v[2].swap v[4], 1
			
	}
	// "#"
	// "Normal Selecting"
	@if `(GETKEY_Shift >= 1 || GETKEY_Ctrl >= 1) != 1 {
			v[100] = 0
			s[25..28].off
			Temp1 = 0
			v[202] = 100
			v[101..140] = 0
			v[99] = 0
			v[98] = 0
			s[24].on
			s[31].on
			s[36].off
			v[82] = -1
			// "民間人フラグ"
			v[375] = 1
			//
			
			// if player is dragging, then set Control_ClickableAgentHolder -1 and turn off click mode
			Control_ClickableAgentHolder = LEGS_ready_for_doubletap != 1 ? -1 : Control_ClickableAgentHolder
			@loop v[1004] .dst Temp1 {
					pick_agents_with_Temp1_ptr()
			}
	
			// kek this proc is fucking retarded, need to be remade tbh
			@if Control_ClickableAgentHolder > 0 {
					Temp1 = Control_ClickableAgentHolder - 1
					pick_agents_with_Temp1_ptr()
			}
		
			@if s[25] .isOn() {
					// "#選択した敵のわっかを白くする"
					Temp2 = v[100] * 300
					Temp2 += 4724
					v[Temp2] = 0
					
			} .else bl {
					@if s[27] .isOn() {
							// "#選択した敵のわっかを白くしてドラッグ１へ"
							Temp2 = v[100] * 300
							Temp2 += 4724
							v[Temp2] = 0
							v[101] = v[100]
							
					}
					
			}
			s[62].off
			
	} .else bl {
			@if s[25] .isOff() {
					v[100] = 0
					@if `GETKEY_Shift >= 1 {
							// "Shift"
							v[202] = 100
							@doWhile v[v[202]] > 0 {
									v[202] += 1
									
							}
							
							@if v[202] <= v[1007] {
									v[202] -= 1
									@loop v[1004] .dst Temp1 {
											s[22].off
											Temp2 = Temp1 * 300 + 5001
											// "とりあえず40体までしか選択できない"
											@if v[202] <= v[1007] {
													// "ObjID>0"
													@if v[Temp2] > 0 {
															v[Temp2].copy v[601], 11
															// "左上"
															Temp3 = v[607] - v[610] - (v[610] <= 18 ? v[1122] : 0)
															Temp4 = v[608] - v[611] - (v[611] <= 18 ? v[1123] : 0)
															// "右下"
															Temp5 = v[607] + v[610] + (v[610] <= 18 ? v[1122] : 0)
															Temp6 = v[608] + v[611] + (v[611] <= 18 ? v[1123] : 0)
															Temp10 = Temp2 + 23
															Temp11 = Temp2 + 100
															Temp20 = Temp2 + 99
															@if `Temp3 <= v[3] && v[1] <= Temp5 && Temp4 <= v[4] && v[2] <= Temp6 && s[62] == 0 {
																	s[22].on
																	// "味方か？"
																	@if v[Temp20] == 0 {
																			@if v[Temp2] != 11 {
																					@if v[Temp10] != 0 {
																							// "民間？"
																							v[701] = 2 + Temp20
																							v[375] = v[v[701] - 99] & 2097152 ? v[375] : 0
																							v[202] += 1
																							@if v[202] <= v[1007] {
																									LEGS_selecting_ally_troop.on
																									s[25].off
																									s[27].off
																									// "選択範囲内"
																									v[v[202]] = Temp1 + 1
																									v[99] += 1
																									// "Temp28用意"
																									v[328] = Temp1 + 1
																									// "選択した集団の最大ＨＰを取得"
																									v[327] = v[328] * 300 + 4700 + 105
																									v[98] += v[v[327]]
																									// "違う種類混じってるか見る"
																									v[330] = v[101] * 300 + 4700 + 101
																									v[329] = v[328] * 300 + 4700 + 101
																									@if v[v[329]] != v[v[330]] {
																											s[24].off
																											
																									}
																									v[330] = v[101] * 300 + 4700 + 222
																									v[329] = v[328] * 300 + 4700 + 222
																									@if v[v[329]] != v[v[330]] {
																											s[31].off
																											
																									}
																									v[198] = v[202]
																									
																							}
																							v[0] = s[62] = LEGS_ready_for_doubletap == 1 ? 1 : 0
																							
																					}
																					
																			} .else bl {
																					
																			}
																			
																	} .else bl {
																			// "Decoyタイプでない"
																			Temp11 += 1
																			
																	}
																	
															}
															
													}
													
											}
											
									}
									
									
							}
							s[62].off
							
					} .else bl {
							// "Ctrl"
							@if `GETKEY_Ctrl >= 1 {
									@loop v[1004] .dst Temp1 {
											s[22].off
											Temp2 = Temp1 * 300 + 5001
											// "とりあえず40体までしか選択できない"
											// "ObjID>0"
											@if v[Temp2] > 0 {
													v[Temp2].copy v[601], 11
													// "左上"
													Temp3 = v[607] - v[610] - (v[610] <= 18 ? v[1122] : 0)
													Temp4 = v[608] - v[611] - (v[611] <= 18 ? v[1123] : 0)
													// "右下"
													Temp5 = v[607] + v[610] + (v[610] <= 18 ? v[1122] : 0)
													Temp6 = v[608] + v[611] + (v[611] <= 18 ? v[1123] : 0)
													Temp10 = Temp2 + 23
													Temp11 = Temp2 + 100
													Temp20 = Temp2 + 99
													@if `Temp3 <= v[3] && v[1] <= Temp5 && Temp4 <= v[4] && v[2] <= Temp6 && s[62] == 0 {
															s[22].on
															// "味方か？"
															@if v[Temp20] == 0 {
																	@if v[Temp2] != 11 {
																			v[202] = 100
																			@loop 40 {
																					v[202] += 1
																					@if `v[v[202]] == Temp1 + 1 {
																							v[v[202]] = 0
																							v[Temp10] = [1, 2, 3, 4][v[Temp20]]
																							// "選択範囲内"
																							v[99] -= 1
																							// "Temp28用意"
																							v[328] = Temp1 + 1
																							// "選択した集団の最大ＨＰを取得"
																							v[327] = v[328] * 300 + 4700 + 105
																							v[98] -= v[v[327]]
																							// "民間？"
																							v[701] = 2 + Temp20
																							v[375] = v[v[701] - 99] & 2097152 ? v[375] : 0
																							@break
																							
																					}
																					
																			}
																			
																			
																	}
																	
															} .else bl {
																	// "Decoyタイプでない"
																	Temp11 += 1
																	
															}
															
													}
													
											}
											
									}
									
									v[101].sortDescending 40
									
							}
							s[62].off
							
					}
					
			}
			
	}
	v[202] = 101
	s[63].on
	Temp10 = v[v[v[202]] * 300 + 4735]
	@if `!between(Temp10, 1, 10) {
			s[63].off
			
	}
	@while v[202] <= v[1007] .dst Temp1 {
			Temp2 = v[v[202]] * 300 + 4701
			// "とりあえず40体までしか選択できない"
			// "ObjID>0"
			@if v[Temp2] > 0 {
					v[Temp2 + 23] = 0
					@if `v[Temp2 + 34] != Temp10 {
							s[63].off
							
					}
					
			}
			v[202] += 1
			
	}

	@if s[63] .isOn() {
			@if `v[v[4530] + (Temp10 - 1) * 20 + 6] == v[99] {
					v[82] = Temp10
					v[472] = divmul(70, 100, v[2216])
					@se.play "ui\clock01" .opt v[472], 100, 50
					
			}
			
	}
	@call .cev 48

}

__fn pick_agents_with_Temp1_ptr {
	s[22].off
	Temp2 = Temp1 * 300 + 5001
	// "とりあえず40体までしか選択できない"
	// "ObjID>0"
	@if v[Temp2] > 0 {
			v[Temp2].copy v[601], 11
			// "左上"
	
			
			TT1 = Control_ClickableAgentHolder -1
			@if TT1 != Temp1 { 
				Temp3 = v[607] - v[610] - (v[610] <= 18 ? v[1122] : 0)
				Temp4 = v[608] - v[611] - (v[611] <= 18 ? v[1123] : 0)
				Temp5 = v[607] + v[610] + (v[610] <= 18 ? v[1122] : 0)
				Temp6 = v[608] + v[611] + (v[611] <= 18 ? v[1123] : 0)
				// further condition check
				TT2 = (Temp3 <= v[3] && v[1] <= Temp5 && Temp4 <= v[4] && v[2] <= Temp6 && s[62] == 0)

			}.else bl{
				TT2 = 1 // it's clickable
				Control_ClickableAgentHolder = -1

			}


			Temp10 = Temp2 + 23
			Temp11 = Temp2 + 100
			Temp20 = Temp2 + 99
			@if Control_ClickableAgentHolder <= 0 { // for click system reforgement
				@if TT2 == 1 {
					change_selected_agents_state_old()
				}
			}
			v[Temp10] = [1, 2, 3, 4][v[Temp20]]
			
	}
}

__fn change_selected_agents_state_old {
	s[22].on
	// "味方か？"
	@if v[Temp20] == 0 {
			@if v[Temp2] != 11 {
					// "民間？"
					v[701] = 2 + Temp20
					v[375] = v[v[701] - 99] & 2097152 ? v[375] : 0
					v[202] += 1
					@if v[202] <= v[1007] {
							LEGS_selecting_ally_troop.on
							s[25].off
							s[27].off
							// "選択範囲内"
							v[v[202]] = Temp1 + 1
							v[99] += 1
							// "Temp28用意"
							v[328] = Temp1 + 1
							// "選択した集団の最大ＨＰを取得"
							v[327] = v[328] * 300 + 4700 + 105
							v[98] += v[v[327]]
							// "違う種類混じってるか見る"
							v[330] = v[101] * 300 + 4700 + 101
							v[329] = v[328] * 300 + 4700 + 101
							@if v[v[329]] != v[v[330]] {
									s[24].off
									
							}
							v[330] = v[101] * 300 + 4700 + 222
							v[329] = v[328] * 300 + 4700 + 222
							@if v[v[329]] != v[v[330]] {
									s[31].off
									
							}
							v[198] = v[202]
							
					}
					v[0] = s[62] = LEGS_ready_for_doubletap == 1 ? 1 : 0
					
			} .else bl {
					// "STATICを選択した"
					v[Temp10] = 1
					@if LEGS_selecting_ally_troop .isOff() {
							s[27].on
							v[100] = Temp1 + 1
							@if LEGS_ready_for_doubletap .isOn() {
									
							}
							
					}
					
			}
			
	} .else bl {
			// "Decoyタイプでない"
			Temp11 += 1
			@if `s[2001 + Temp1] == 1 && v[Temp11] != 103 && LEGS_ready_for_doubletap == 1 && LEGS_selecting_ally_troop == 0 {
					// "ワンクリックだけしていたときは敵も選択可能"
					s[25].on
					s[27].off
					v[100] = Temp1 + 1
					@if v[Temp2] == 11 {
							s[28].on
							
					} .else bl {
							v[0] = s[62] = LEGS_ready_for_doubletap == 1 ? 1 : 0
							
					}
					
			}
			
	}
	

}
